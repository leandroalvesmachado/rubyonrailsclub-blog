<%= link_to "Categorias", administrate_authors_path, class:"admin-title" %>

<div class="main-content">
  <div class="row">
    <h2 class="admin-subtitle">Visualização do autor</h2>
    <div class="buttons">
      <%= link_to edit_administrate_author_path(@author), class: "button small", title: "Editar", alt: "edit" do %>
        <%= image_tag "icons/white/edit.svg", alt:"save" %>
        Editar categoria
      <% end %>
    </div>
  </div>
  <%= render "form", author: @author, action: :show %>
</div>

